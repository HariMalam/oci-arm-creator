# --- Application Config ---
PORT=3000
# Retry every 30 seconds (30000 ms)
RETRY_INTERVAL_MS=30000

# --- OCI Configuration ---
# Your Tenancy OCID
OCI_TENANCY_ID=ocid1.tenancy.oc1..xxxxxx
# Your User OCID
OCI_USER_ID=ocid1.user.oc1..xxxxxx
# Your API Key Fingerprint
OCI_FINGERPRINT=xx:xx:xx:xx:xx:xx:xx:xx
# Path to the private key *inside the container*
# We will mount this path in docker-compose.yaml
OCI_PRIVATE_KEY_PATH=/run/secrets/oci_private_key.pem
# Your OCI Region (e.g., ap-mumbai-1, us-ashburn-1)
OCI_REGION=ap-mumbai-1

# --- VM Parameters ---
# The Compartment OCID where the VM will be created
COMPARTMENT_ID=ocid1.compartment.oc1..xxxxxx
# The Availability Domain (e.g., Uocm:AP-MUMBAI-1-AD-1)
AVAILABILITY_DOMAIN=Uocm:AP-MUMBAI-1-AD-1
# The Subnet OCID for the VM's VNIC
SUBNET_ID=ocid1.subnet.oc1..xxxxxx
# The Image OCID (e.g., an Ubuntu 22.04 ARM image)
IMAGE_ID=ocid1.image.oc1..xxxxxx
# Your public SSH key content
SSH_PUBLIC_KEY="ssh-rsa AAAA... user@machine"
# Display name for the VM
VM_NAME=My-Always-Free-VM

# --- Nodemailer (Gmail Example) ---
# Use a Gmail "App Password" here, not your real password
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USER=your.email@gmail.com
MAIL_PASS=your-gmail-app-password
# Email address to send notifications to
MAIL_TO=your.personal.email@gmail.com